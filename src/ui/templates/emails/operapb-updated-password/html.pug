        table-layout: fixed;
        background-color: #fff;
        padding: 0px;
        }
        .main {
        background-color: rgb(255, 255, 255);
        margin: 0px auto;
        width: 100%;
        max-width: 600px;
        border-spacing: 0;
        }
        /* Top */
        .content {
